generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

// Справочник продуктов
model Product {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  calories  Float      // ккал на 100г
  mealItems MealItem[] 
}

// Дневной рацион
model DailyLog {
  id          Int        @id @default(autoincrement())
  // Используем только дату (гггг-мм-дд) для уникальности
  date        DateTime   @unique 
  dailyLimit  Float      @default(2000)
  items       MealItem[]
}

// Промежуточная таблица: что и сколько съели
model MealItem {
  id         Int      @id @default(autoincrement())
  weight     Float    // вес в граммах
  
  productId  Int
  product    Product  @relation(fields: [productId], references: [id])
  
  dailyLogId Int
  dailyLog   DailyLog @relation(fields: [dailyLogId], references: [id], onDelete: Cascade)
}